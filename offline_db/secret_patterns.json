{
  "patterns": [
    {
      "name": "AWS Access Key",
      "regex": "AKIA[0-9A-Z]{16}",
      "risk": "high"
    },
    {
      "name": "AWS Secret Key",
      "regex": "(?i)aws_secret_access_key[\s:=\"]+([A-Za-z0-9/+=]{40})",
      "risk": "high"
    },
    {
      "name": "GitHub Token",
      "regex": "ghp_[A-Za-z0-9]{36}",
      "risk": "high"
    },
    {
      "name": "GCP API Key",
      "regex": "AIza[0-9A-Za-z\-_]{35}",
      "risk": "high"
    },
    {
      "name": "Stripe Secret Key",
      "regex": "sk_live_[0-9a-zA-Z]{24}",
      "risk": "high"
    },
    {
      "name": ".env Variable",
      "regex": "(?i)(DB_PASSWORD|JWT_SECRET|SECRET_KEY|API_KEY|ACCESS_TOKEN)[\s:=\"]+([A-Za-z0-9/+=@!#$%^&*()_\-]{8,})",
      "risk": "medium"
    }
  ]
} 